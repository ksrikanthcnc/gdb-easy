#!/bin/bash
set -e
set -x

cd "$1"

echo $(tty) > ~/my/bin/temp_for_gdb
echo $$ > ~/my/bin/pid_of_gterm

(
stty isig brkint susp ''
while true; do sleep 3600; done </dev/null
)

